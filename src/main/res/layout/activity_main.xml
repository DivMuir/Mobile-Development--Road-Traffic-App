<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="?android:attr/textColorSecondary" />


    <Button
        android:id ="@+id/RoadWorkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Planned RoadWorks"
        android:layout_x="2dp"
        android:layout_y="465dp"
        android:textSize="12sp"
        android:layout_marginEnd="22dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentEnd="true"
        android:backgroundTint="?android:attr/textColorSecondaryInverseNoDisable" />

    <Button
        android:id="@+id/IncidentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Incidents"
        android:layout_x="277dp"
        android:layout_y="456dp"
        android:textSize="12sp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/RoadWorkButton" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarIcon" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchIcon"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/RoadWorkButton" />


</RelativeLayout>


